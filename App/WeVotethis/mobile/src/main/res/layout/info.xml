<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_below="@+id/current_location_city"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/relativeLayout3"
        android:layout_centerVertical="true"
        android:background="#f9f2a0"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center_horizontal">

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/web_1"
            android:background="@drawable/glo1"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/textView25" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView8"
            android:src="@drawable/twitter"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Barbara Boxer"
            android:id="@+id/textView23"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView7" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dem"
            android:id="@+id/textView24"
            android:textColor="#ff0000"
            android:layout_alignBottom="@+id/textView23"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@dianne I&apos;m going to confess my love."
            android:id="@+id/textView25"
            android:textColor="#000000"
            android:layout_below="@+id/textView23"
            android:layout_toEndOf="@+id/imageView8" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/more"
            android:id="@+id/more_1"
            android:layout_alignTop="@+id/web_1"
            android:layout_toEndOf="@+id/web_1" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:id="@+id/imageView7"
            android:src="@drawable/barbara_boxer"
            android:layout_gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:visibility="invisible"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Barbarboxer@gmail.com"
            android:id="@+id/email"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/web_1" />

    </RelativeLayout>

</LinearLayout>