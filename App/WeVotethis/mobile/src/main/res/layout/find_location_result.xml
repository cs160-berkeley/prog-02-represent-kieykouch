<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.kieykouch.politicawesome.current_location"
    android:background="#ffffff">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Current Location: Sherman Oaks, CA"
        android:id="@+id/current_location_city"
        android:textColor="#e916de"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/current_location_city"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:id="@+id/linearLayout"
        android:layout_centerVertical="true"
        android:background="#f9f2a0"
        android:layout_alignParentEnd="true">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView"
            android:src="@drawable/barbara_boxer"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Barbara Boxer"
            android:id="@+id/textView3"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dem"
            android:id="@+id/textView4"
            android:textColor="#ff0000"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView4"
            android:src="@drawable/twitter"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@dianne I&apos;m going to confess my love."
            android:id="@+id/textView5"
            android:textColor="#000000"
            android:layout_below="@+id/textView3"
            android:layout_toEndOf="@+id/imageView4" />

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/Email_1"
            android:background="@drawable/email"
            android:layout_alignBottom="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/web_1"
            android:background="@drawable/glo1"
            android:layout_alignTop="@+id/Email_1"
            android:layout_toEndOf="@+id/Email_1" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/more"
            android:id="@+id/more_1"
            android:layout_alignTop="@+id/web_1"
            android:layout_toEndOf="@+id/web_1" />

    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout"
        android:background="#f9f2a0"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linearLayout"
        android:layout_marginTop="2dp">

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/Email_2"
            android:background="@drawable/email"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/web_2"
            android:background="@drawable/glo1"
            android:layout_alignTop="@+id/Email_2"
            android:layout_toEndOf="@+id/Email_2" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView3"
            android:src="@drawable/dianne"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView6"
            android:src="@drawable/twitter"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Dianne Feinstein"
            android:id="@+id/textView8"
            android:textColor="#0026ff"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Rep"
            android:id="@+id/textView10"
            android:textColor="#0026ff"
            android:layout_alignBottom="@+id/textView8"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@dianne Barak Obama is actually against gay ..."
            android:id="@+id/textView11"
            android:textColor="#000000"
            android:layout_below="@+id/textView8"
            android:layout_toEndOf="@+id/imageView6" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/more"
            android:id="@+id/more_2"
            android:layout_alignTop="@+id/web_2"
            android:layout_toEndOf="@+id/web_2" />
    </RelativeLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout2"
        android:background="#f9f2a0"
        android:layout_below="@+id/relativeLayout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="2dp">

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/Email_3"
            android:background="@drawable/email"
            android:layout_alignBottom="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <ImageButton
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:id="@+id/Web_3"
            android:background="@drawable/glo1"
            android:layout_alignTop="@+id/Email_3"
            android:layout_toEndOf="@+id/Email_3" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/imageView2"
            android:src="@drawable/brad_sherman"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-20dp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:id="@+id/imageView5"
            android:src="@drawable/twitter"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Brad Sherman"
            android:id="@+id/textView6"
            android:textColor="#ff0000"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Dem"
            android:id="@+id/textView7"
            android:textColor="#ff0000"
            android:layout_alignBottom="@+id/textView6"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="\@brad I love my wife the most."
            android:id="@+id/textView9"
            android:textColor="#000000"
            android:layout_below="@+id/textView6"
            android:layout_toEndOf="@+id/imageView5" />

        <ImageButton
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/more"
            android:id="@+id/more_3"
            android:layout_alignTop="@+id/Web_3"
            android:layout_toEndOf="@+id/Web_3" />
    </RelativeLayout>


</RelativeLayout>
